<Window x:Class="demo_testing_net7_0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:fa="https://dsaladin.dev/products/fontawesome/wpf/xaml"
        xmlns:local="clr-namespace:demo_testing_net7_0"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance local:MainWindow}"
        Background="Black"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel VerticalAlignment="Center">
        <Label Height="50" Width="200" fa:Content.Icon="SolidArrowsTurnRight" FontSize="40" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" x:Name="lblIcon" />
        <fa:FontAwesomeImage Icon="SolidArrowsTurnRight" Height="50" Width="200" Foreground="White" Rotation="45" />
        <Label fa:Content.Icon="{Binding TestIcon}" Height="50" Width="200" FontSize="40" Foreground="White" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" />
    </StackPanel>
</Window>
